<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#903434"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ExtraText">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/app_logo" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Title Section -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/exploreIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/playlist_icon" />

        <TextView
            android:id="@+id/exploreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlists"
            android:textSize="18sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginStart="8dp"
            android:gravity="start" />
    </LinearLayout>

    <!-- Playlist Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="0dp"
        android:paddingEnd="0dp">

        <!-- Playlist List -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/playlistLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Playlists:"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:textColor="#FFFFFFFF" />

            <ListView
                android:id="@+id/playlistListView"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:dividerHeight="1dp"
                android:divider="@android:color/darker_gray"
                android:background="#000000"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnAddPlaylist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Playlist"
            android:backgroundTint="#903434" />

        <Button
            android:id="@+id/btnRemovePlaylist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove Playlist"
            android:layout_marginStart="8dp"
            android:backgroundTint="#903434" />
    </LinearLayout>

</LinearLayout>
