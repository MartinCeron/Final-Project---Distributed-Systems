                <ImageView
                    android:id="@+id/songImage2"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:clickable="true"
                    android:contentDescription="Song 2 Image"
                    android:focusable="true"
                    android:src="@drawable/song2" />

                <TextView
                    android:id="@+id/songName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Song Name 2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/artistName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Artist 2"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Song 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/songImage3"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
